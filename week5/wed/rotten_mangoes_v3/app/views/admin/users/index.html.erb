<h1>Admin Section</h1>
<% if @users %>
<%= paginate @users %>

<% @users.each do |user| %>
  
 <table class="table">
  <thead>
    <tr>

      <th>First Name</th>
      <th>Last Name</th>
      <th>Email</th>
      <th>Delete</th>
    </tr>
  </thead>
  <tbody>
    <tr>

<td><%= user.firstname %></td>
<td><%= user.lastname %></td>
<td><%= user.email %></td>
<td><%= link_to "delete", admin_user_path(user), :method => :delete, :"data_confirm" => "You sure?" %></td>
  <% end %>
    </tr>

  </tbody>
</table>
<% end %>


