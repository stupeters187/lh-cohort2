<% @messages.each do |message| %>
  <div class="message">
    <h3><a href="/messages/<%= message.id %>"><small>(by: <%= message.author %>)</small></h3>
    <p>
      <%= message.content %>
    </p>
    <p>
      <%= message.url %>
    </p>
    <p>
      <%= message.created_at %>
    </p>
    <p>
      <%= message.updated_at %>
    </p>
    <a href="/messages/new">Post a message... It's FREE (for now)</a>
  </div>
<% end %>