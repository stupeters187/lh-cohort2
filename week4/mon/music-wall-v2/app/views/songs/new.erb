<% if @song && @song.errors.any? %>
  <div class="alert alert-danger" role="alert">
    <strong>Some issues with your post, please fix them:</strong>
    <ul>
      <% @song.errors.full_messages.each do |song| %>
      <li><%= song %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<form method="post" action="/songs">
  <div class="form-group">
    <label>Title:</label>
    <input class="form-control" type="text" name="title" value="<%= @song && @song.title %>">
  </div>
  <div class="form-group">
    <label>Artist:</label>
    <input class="form-control" type="text" name="artist" value="<%= @song && @song.artist %>">
  </div>
  <div class="form-group">
    <label>Url:</label>
    <input class="form-control" type="text" name="url" value="<%= @song && @song.url %>">
  </div>
  <div>
    <input type="submit" value="Submit">
  </div>
</form>

<hr/>
<a href="/songs">Back to All Songs</a>
